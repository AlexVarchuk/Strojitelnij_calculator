<?xml version="1.0" encoding="utf-8"?><!--suppress ALL -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="40dp"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginTop="8dp"
    android:background="#90CAF9"
    android:elevation="6dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">




        <TextView
            android:id="@+id/tv_size_CM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Ведіть розмір"
            android:textSize="24sp" />

        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_size_CM"
            android:layout_marginLeft="@dimen/activity_content_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin">

            <TableRow android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <TextView
                    android:id="@+id/tv_x_CM"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/standrt_margin"
                    android:layout_marginRight="@dimen/standrt_margin"
                    android:text="X:"
                    android:textColor="@color/secondary_text"
                    android:textSize="34sp" />

                <EditText
                    android:id="@+id/et_x_CM"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/standrt_margin"
                    android:inputType="number"
                    android:maxLength="4"

                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/tv_y_CM"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/standrt_margin"
                    android:text="Y:"
                    android:textColor="@color/secondary_text"
                    android:textSize="34sp" />

                <EditText
                    android:id="@+id/et_y_CM"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/standrt_margin"
                    android:inputType="number"
                    android:maxLength="4"

                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/tv_z_CM"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/standrt_margin"
                    android:text="Z:"
                    android:textColor="@color/secondary_text"
                    android:textSize="34sp" />

                <EditText
                    android:id="@+id/et_z_CM"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLength="4"

                    android:textSize="30sp" />
            </TableRow>


        </TableLayout>


        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tableLayout"
            android:layout_marginLeft="@dimen/activity_content_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:orientation="horizontal"
            android:weightSum="2">


            <RadioGroup android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                android:id="@+id/rg_marka_CM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tableLayout"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Виберіть марку цементу"
                    android:textSize="20sp" />

                <RadioButton
                    android:id="@+id/radio_red"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="M-100" />

                <RadioButton
                    android:id="@+id/radio_blue"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="M-150" />

                <RadioButton
                    android:id="@+id/radio_green"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="M-200" />

                <RadioButton
                    android:id="@+id/radio_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="M-250" />

                <RadioButton
                    android:id="@+id/m300"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="M-300" />

                <RadioButton
                    android:id="@+id/m350"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="M-350" />

                <RadioButton
                    android:id="@+id/m400"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="M-400" />
            </RadioGroup>

            <RadioGroup
                android:id="@+id/rg_size_CM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/linearLayout"
                android:layout_alignStart="@+id/linearLayout"
                android:layout_below="@+id/rg_marka_CM"
                android:layout_weight="1"
                android:orientation="vertical">

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Гравій/Щебінь"
                        android:textSize="20sp" />

                    <RadioButton
                        android:id="@+id/radio_red"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Гравій" />

                    <RadioButton
                        android:id="@+id/radio_blue"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Щебінь" />
                </RadioGroup>

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Розмір гравію/щебню"
                        android:textSize="20sp" />


                    <RadioButton
                        android:id="@+id/radio_red"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="10-20 mm" />

                    <RadioButton
                        android:id="@+id/radio_blue"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="40 mm" />

                    <RadioButton
                        android:id="@+id/radio_green"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="60 mm" />

                    <RadioButton
                        android:id="@+id/radio_gray"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="80 mm" />
                </RadioGroup>
            </RadioGroup>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">


            </LinearLayout>

        </LinearLayout>
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </ScrollView>


</RelativeLayout>
